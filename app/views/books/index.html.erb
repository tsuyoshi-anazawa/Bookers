<% if flash[:destroy] %>
<p><%= flash[:destroy] %></p>
<% end %>

<h1>Books</h1>

<table>
<thead>
	<tr>
		<th>Title</th><th>Body</th><th colspan="3"></th>
	</tr>
</thead>
<% @books.each do |book| %>
<tbody>

	<tr>
		<% id = @book %>
		<td><%= book.title %></td><td><%= book.body %></td><td><%= link_to "Show",book_path(book.id),class:"show_#{id}" %></td>
		<td><%= link_to "Edit",edit_book_path(book.id),class:"edit_#{id}" %></td><td><%= link_to "Destroy",book_path(book.id),class:"destroy_#{id}",method: :delete, "data-confirm" => "Are you sure?" %></td>
	</tr>

</tbody>
<% end %>
</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

<h5>Title</h5>
<%= f.text_field :title,class:"book_title" %>

<h5>Body</h5>
<%= f.text_area :body,class:"book_body" %>

<p><%= f.submit 'Create Book' %></p>

<% end %>